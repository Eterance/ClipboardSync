<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClipboardSync_Client_Mobile.Views.PinnedPage"
             xmlns:localization="clr-namespace:ClipboardSync_Client_Mobile.Localization"
             Title="{x:Static localization:Resources.Pinned}">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <CollectionView ItemsSource="{Binding PinnedList}"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="{x:Static localization:Resources.Delete}"
                                               IconImageSource="favorite.png"
                                               Invoked="SwipeItem_Invoked_Delete"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="red" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="{x:Static localization:Resources.Detail}"
                                               IconImageSource="favorite.png"
                                               Invoked="SwipeItem_Invoked_Detail"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="Yellow" />
                                    <SwipeItem Text="{x:Static localization:Resources.Unpin}"
                                               IconImageSource="favorite.png"
                                               Invoked="SwipeItem_Invoked_Unpin"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="blue" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <StackLayout Background="transparent">
                                <Label Text="{Binding}"
                                       Margin="10"
                                       HeightRequest="80"
                                       VerticalTextAlignment="Center"
                                       MaxLines="4"
                                       LineBreakMode="TailTruncation"
                                       FontSize="Small"/>
                            </StackLayout>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>